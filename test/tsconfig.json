{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "types": [ "node" ]
  },
  "include": [ "*.ts", "**/*.ts" ],
  "exclude": [ "node_modules" ]
}
